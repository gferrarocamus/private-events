<h1>Create new Event</h1>

<%= form_for(@event, url: new_event_url) do |f| %>

  <%= f.label :name %><br>
  <%= f.text_field :name%><br>

  <%= f.label :date %><br>
  <%= f.date_field :date%><br>

  <%= f.label :location %><br>
  <%= f.text_field :location%><br>

  <%= f.label :description %><br>
  <%= f.text_area :description%><br>

  <%= f.submit "Create event"%>
<% end %>